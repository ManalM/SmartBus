<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#E0DBC7"
    app:cardCornerRadius="12dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/student_image"
            android:layout_width="50dp"
            android:layout_height="wrap_content"

            android:layout_margin="15dp"
            app:srcCompat="@drawable/user" />

        <TextView
            android:id="@+id/student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="Mohammed"
            android:textColor="#8B887B"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/utilities_layout"

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#fff"
            android:visibility="visible"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/scan"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"

                    android:drawableTop="@drawable/scan_barcode"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Scan" />

                <TextView
                    android:id="@+id/profile"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"

                    android:drawableTop="@drawable/profile_image"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Profile" />

                <TextView
                    android:id="@+id/rate_student"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/star"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Rate" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.cardview.widget.CardView>