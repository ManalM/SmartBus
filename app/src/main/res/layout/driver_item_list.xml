<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="20dp"
    android:background="#E0DBC7"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/student_image"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="15dp"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="Mohammed"
        android:textColor="#8B887B"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/utilities_layout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:background="#fff"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/outline_code_black_18dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Scan" />

        <TextView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"

            android:drawableTop="@drawable/outline_account_circle_black_18dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Profile" />

        <TextView
            android:id="@+id/rate_student"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/star"
            android:gravity="center_horizontal|center_vertical"
            android:text="Rate" />
    </LinearLayout>
</LinearLayout>

